<?xml version="1.0" encoding="ISO-8859-1" ?>
<web-app
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
        version="3.0">
    <welcome-file-list>
        <welcome-file>createCar.jsp</welcome-file>
        <welcome-file>list.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>ItemsController</servlet-name>
        <servlet-class>todolist.ItemsController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListController</servlet-name>
        <servlet-class>avito.ListController</servlet-class>
        <init-param>
            <param-name>debug</param-name>
            <param-value>true</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>MadeController</servlet-name>
        <servlet-class>todolist.MadeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ImageController</servlet-name>
        <servlet-class>avito.ImageController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StatusController</servlet-name>
        <servlet-class>avito.StatusController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DescriptionController</servlet-name>
        <servlet-class>avito.DescriptionController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CarsController</servlet-name>
        <servlet-class>avito.CarsController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FilterForList</servlet-name>
        <servlet-class>avito.FilterForList</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignInController</servlet-name>
        <servlet-class>avito.SignInController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignInController</servlet-name>
        <url-pattern>/sign</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FilterForList</servlet-name>
        <url-pattern>/filterFlist</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StatusController</servlet-name>
        <url-pattern>/status</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ItemsController</servlet-name>
        <url-pattern>/items</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CreateController</servlet-name>
        <servlet-class>avito.CreateController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateController</servlet-name>
        <url-pattern>/create</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MadeController</servlet-name>
        <url-pattern>/made</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListController</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ImageController</servlet-name>
        <url-pattern>/image</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CarsController</servlet-name>
        <url-pattern>/cars</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DescriptionController</servlet-name>
        <url-pattern>/desc</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>FilterSign</filter-name>
        <filter-class>avito.FilterSign</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FilterSign</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>
    <context-param>
        <description>Location to store uploaded file</description>
        <param-name>file-upload</param-name>
        <param-value>
            C:\projects\hiber\src\main\webapp\pictures\
        </param-value>
    </context-param>
</web-app>